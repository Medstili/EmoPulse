<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.settings2Fragment"
    android:background="@drawable/settings_bg_2"
    android:layout_gravity="center"
    >

    <ScrollView
        android:id="@+id/settingsScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/settingstitlecontainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="?actionBarSize"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="10dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_settings_24"

                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="4"
                android:columnCount="2"
                android:layout_margin="10dp">
                <com.google.android.material.card.MaterialCardView
                    app:cardElevation="3dp"
                    android:layout_gravity="fill"
                    android:layout_columnWeight="1"
                    app:strokeWidth="0dp"
                    app:strokeColor="@android:color/transparent"
                    app:cardBackgroundColor="@color/white"
                    android:layout_margin="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:src="@drawable/language_translation"
                            android:layout_margin="10dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Language"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="15sp"
                            android:autoSizeMaxTextSize="30sp"
                            android:autoSizeStepGranularity="1sp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="10sp"
                            android:autoSizeMaxTextSize="15sp"
                            android:autoSizeStepGranularity="2sp"
                            android:textSize="20sp"
                            android:text="switch your language"
                            android:textColor="@color/gray_600"
                            />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    app:cardElevation="3dp"
                    android:layout_gravity="fill"
                    android:layout_columnWeight="1"
                    app:strokeWidth="0dp"
                    app:strokeColor="@android:color/transparent"
                    app:cardBackgroundColor="@color/white"
                    android:layout_margin="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:src="@drawable/notification"
                            android:layout_margin="10dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/title_notifications"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="15sp"
                            android:autoSizeMaxTextSize="30sp"
                            android:autoSizeStepGranularity="1sp"
                            />
                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/enableNotificationsSwitch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoSizeMaxTextSize="20sp"
                            android:autoSizeMinTextSize="10sp"
                            android:autoSizeStepGranularity="1sp"
                            android:autoSizeTextType="uniform"
                            android:paddingStart="25dp"
                            android:paddingEnd="10dp"
                            android:text="Enable"
                            app:thumbTint="@color/white"
                            android:thumb="@drawable/custom_switch_thumb"
                            app:trackTint="@color/switch_track_colors"
                            app:track="@drawable/custom_switch_track"

                            />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/accountSettingsBtn"
                    app:cardElevation="3dp"
                    android:layout_gravity="fill"
                    android:layout_columnWeight="1"
                    app:strokeWidth="0dp"
                    app:strokeColor="@android:color/transparent"
                    app:cardBackgroundColor="@color/white"
                    android:layout_margin="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:src="@drawable/user_management"
                            android:layout_margin="10dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Account"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="15sp"
                            android:autoSizeMaxTextSize="30sp"
                            android:autoSizeStepGranularity="1sp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="10sp"
                            android:autoSizeMaxTextSize="15sp"
                            android:autoSizeStepGranularity="2sp"
                            android:textSize="20sp"
                            android:text="edit your account"
                            android:textColor="@color/gray_600"

                            />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/dataPrivacyBtn"
                    app:cardElevation="3dp"
                    android:layout_gravity="fill"
                    android:layout_columnWeight="1"
                    app:strokeWidth="0dp"
                    app:strokeColor="@android:color/transparent"
                    app:cardBackgroundColor="@color/white"
                    android:layout_margin="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:src="@drawable/folder_lock"
                            android:layout_margin="10dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Data privacy"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="15sp"
                            android:autoSizeMaxTextSize="30sp"
                            android:autoSizeStepGranularity="1sp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="10sp"
                            android:autoSizeMaxTextSize="15sp"
                            android:autoSizeStepGranularity="2sp"
                            android:textSize="20sp"
                            android:text="control your data"
                            android:textColor="@color/gray_600"
                            />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    app:cardElevation="3dp"
                    android:layout_gravity="fill"
                    android:layout_columnWeight="1"
                    app:strokeWidth="0dp"
                    app:strokeColor="@android:color/transparent"
                    app:cardBackgroundColor="@color/white"
                    android:layout_margin="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:src="@drawable/documents_com"
                            android:layout_margin="10dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="T / Q"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="15sp"
                            android:autoSizeMaxTextSize="30sp"
                            android:autoSizeStepGranularity="1sp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="10sp"
                            android:autoSizeMaxTextSize="15sp"
                            android:autoSizeStepGranularity="2sp"
                            android:textSize="20sp"
                            android:text="read the terms and conditions"
                            android:textColor="@color/gray_600"
                            />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/faqBtn"
                    app:cardElevation="3dp"
                    android:layout_gravity="fill"
                    android:layout_columnWeight="1"
                    app:strokeWidth="0dp"
                    app:strokeColor="@android:color/transparent"
                    app:cardBackgroundColor="@color/white"
                    android:layout_margin="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:src="@drawable/faqs2"
                            android:layout_margin="10dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Faqs"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="15sp"
                            android:autoSizeMaxTextSize="30sp"
                            android:autoSizeStepGranularity="1sp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="10sp"
                            android:autoSizeMaxTextSize="15sp"
                            android:autoSizeStepGranularity="2sp"
                            android:textSize="20sp"
                            android:text="answer your question"
                            android:textColor="@color/gray_600"
                            />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/contactUsBtn"
                    app:cardElevation="3dp"
                    android:layout_gravity="fill"
                    app:strokeWidth="0dp"
                    app:strokeColor="@android:color/transparent"
                    app:cardBackgroundColor="@color/white"
                    android:layout_margin="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/help"
                            android:layout_margin="10dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Contact Us"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="15sp"
                            android:autoSizeMaxTextSize="30sp"
                            android:autoSizeStepGranularity="1sp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="10sp"
                            android:autoSizeMaxTextSize="15sp"
                            android:autoSizeStepGranularity="2sp"
                            android:textSize="20sp"
                            android:text="be in touch with us"
                            android:textColor="@color/gray_600"
                            />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/logoutBtn"
                    app:cardElevation="3dp"
                    android:layout_gravity="fill"
                    app:strokeWidth="0dp"
                    app:strokeColor="@android:color/transparent"
                    app:cardBackgroundColor="@color/white"
                    android:layout_margin="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:src="@drawable/log_out_exit"
                            android:layout_margin="10dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="Log Out"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="15sp"
                            android:autoSizeMaxTextSize="30sp"
                            android:autoSizeStepGranularity="1sp"
                            />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </GridLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>