<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="30dp"
    android:orientation="vertical"
    android:layout_gravity="start"
    android:padding="8dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/user_message_bubble"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:maxWidth="250dp"
            android:text="bot message"
            android:layout_gravity="start"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/regenerate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/refresh3"
                android:layout_margin="10dp"
                />
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/dislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/outline_hand_dislike"
                android:backgroundTint="@color/black"
                android:layout_margin="10dp"
                />
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/outline_hand_like"
                android:backgroundTint="@color/black"
                android:layout_margin="10dp"
                />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>
