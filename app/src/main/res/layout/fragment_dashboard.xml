<FrameLayout
    android:id="@+id/dashbaordPage"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.DashboardFragment"
    android:layout_margin="10dp"
    >

<ScrollView
    android:id="@+id/dashboardScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

<!--title-->
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:textColor="@color/light_blue_400"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="65sp"
            android:autoSizeMinTextSize="45sp"
            android:autoSizeStepGranularity="1sp"
            android:textSize="40sp"
            android:textStyle="bold"
            />
<!--description-->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#1AFFFFFF"
            app:cardCornerRadius="16dp"
            app:strokeColor="@android:color/transparent"
            app:strokeWidth="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This is your safe space to track your progress, celebrate your wins, and reflect on your journey."
                    android:autoSizeMinTextSize="15sp"
                    android:autoSizeMaxTextSize="25sp"
                    android:autoSizeStepGranularity="1sp"
                    android:autoSizeTextType="uniform"
                    android:textStyle="normal"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="“Small steps every day lead to big changes.”"
                    android:autoSizeMinTextSize="15sp"
                    android:autoSizeMaxTextSize="25sp"
                    android:autoSizeStepGranularity="1sp"
                    android:autoSizeTextType="uniform"
                    android:textStyle="normal|italic"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/light_blue_900"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
<!--exercise cards list -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="you are doing good keep going"
            android:textColor="@color/cyan"
            android:textSize="20sp"
            android:textStyle="italic"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeMaxTextSize="25sp"
            android:autoSizeStepGranularity="1sp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:elevation="3dp"
            />
<!--goals exercises-->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#1AFFFFFF"
            app:cardCornerRadius="16dp"
            app:strokeColor="@android:color/transparent"
            app:strokeWidth="0dp"
            android:layout_margin="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Title"
                        android:textSize="20sp"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="10sp"
                        android:autoSizeMaxTextSize="25sp"
                        android:autoSizeStepGranularity="2sp"
                        android:textColor="@color/white"/>
                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        app:trackThickness="12dp"
                        android:progress="50"
                        app:trackCornerRadius="10dp"
                        app:trackColor="#32FFFFFF"
                        app:indicatorColor="@color/cyan"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Title"
                        android:textSize="20sp"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="10sp"
                        android:autoSizeMaxTextSize="25sp"
                        android:autoSizeStepGranularity="2sp"
                        android:textColor="@color/white"/>
                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        app:trackThickness="12dp"
                        android:progress="20"
                        app:trackCornerRadius="10dp"
                        app:indicatorColor="@color/cyan"
                        app:trackColor="#32FFFFFF"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Title"
                        android:textSize="20sp"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="10sp"
                        android:autoSizeMaxTextSize="25sp"
                        android:autoSizeStepGranularity="2sp"
                        android:textColor="@color/white"/>
                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        app:trackThickness="12dp"
                        android:progress="80"
                        app:trackCornerRadius="10dp"
                        app:indicatorColor="@color/cyan"
                        app:trackColor="#32FFFFFF"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Title"
                        android:textSize="20sp"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="10sp"
                        android:autoSizeMaxTextSize="25sp"
                        android:autoSizeStepGranularity="2sp"
                        android:textColor="@color/white"/>
                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        app:trackThickness="12dp"
                        android:progress="100"
                        app:trackCornerRadius="10dp"
                        app:indicatorColor="@color/cyan"
                        app:trackColor="#32FFFFFF"
                        />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
<!--line chart-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mood Tracking"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeMaxTextSize="25sp"
            android:autoSizeStepGranularity="1sp"
            android:layout_marginTop="10dp"
            />
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#1AFFFFFF"
            app:cardCornerRadius="16dp"
            app:strokeWidth="0dp"
            app:strokeColor="@android:color/transparent"
            app:cardUseCompatPadding="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="5dp"
                >
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:strokeWidth="0dp"
                    app:strokeColor="@android:color/transparent"
                    android:layout_margin="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                       >
<!--                        day-->
                        <com.google.android.material.button.MaterialButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Day"
                            android:textSize="20sp"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="10sp"
                            android:autoSizeMaxTextSize="25sp"
                            android:autoSizeStepGranularity="1sp"
                            android:backgroundTint="@android:color/transparent"
                            android:textColor="@color/white"
                            app:cornerRadius="10dp"/>
<!--                        week-->
                        <com.google.android.material.button.MaterialButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Week"
                            android:textSize="20sp"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="10sp"
                            android:autoSizeMaxTextSize="25sp"
                            android:autoSizeStepGranularity="1sp"
                            android:backgroundTint="@android:color/transparent"
                            android:textColor="@color/white"
                            app:cornerRadius="10dp"/>
<!--                        month-->
                        <com.google.android.material.button.MaterialButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Month"
                            android:textSize="20sp"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="10sp"
                            android:autoSizeMaxTextSize="25sp"
                            android:autoSizeStepGranularity="1sp"
                            android:backgroundTint="@android:color/transparent"
                            android:textColor="@color/white"
                            app:cornerRadius="10dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineChart"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        />




            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
<!--conversation summary-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Conversation Summary"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeMaxTextSize="25sp"
            android:autoSizeStepGranularity="1sp"
            android:layout_marginTop="10dp"
            />
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#3AFFFFFF"
            app:cardCornerRadius="16dp"
            app:strokeColor="@android:color/transparent"
            app:strokeWidth="0dp"
            android:layout_margin="10dp"
            >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="“today you have talked about the strees at your work and i suggest you some therapy exercices ”"
                    android:autoSizeMinTextSize="15sp"
                    android:autoSizeMaxTextSize="35sp"
                    android:autoSizeStepGranularity="1sp"
                    android:textSize="20sp"
                    android:autoSizeTextType="uniform"
                    android:textStyle="normal|italic"
                    android:textColor="@color/white"
                    android:padding="10dp"/>

        </com.google.android.material.card.MaterialCardView>
<!--indicator & lelly-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--bar chart-->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#1AFFFFFF"
                app:cardCornerRadius="16dp"
                app:strokeWidth="0dp"
                app:strokeColor="@android:color/transparent"
                app:cardUseCompatPadding="true"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="interactivity with lelly"
                        android:textSize="11sp"
                        android:textStyle="italic"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="8sp"
                        android:autoSizeMaxTextSize="15sp"
                        android:autoSizeStepGranularity="1sp"
                        android:layout_margin="5dp"
                        android:textColor="@color/white"/>
                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/barChart"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <!--pie chart-->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#1AFFFFFF"
                app:cardCornerRadius="16dp"
                app:strokeWidth="0dp"
                app:strokeColor="@android:color/transparent"
                app:cardUseCompatPadding="true"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mood Indecators"
                        android:textSize="11sp"
                        android:textStyle="italic"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="8sp"
                        android:autoSizeMaxTextSize="15sp"
                        android:autoSizeStepGranularity="1sp"
                        android:layout_margin="5dp"
                        android:textColor="@color/white"/>
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChart"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </LinearLayout>
</ScrollView>


</FrameLayout>