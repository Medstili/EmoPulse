<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.settingsFragment"
    android:background="@drawable/settings_bg_2"
    android:layout_gravity="center"
    android:padding="10dp"
    >

    <ScrollView
        android:id="@+id/settingsScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/settingstitlecontainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="?actionBarSize"
                android:layout_marginBottom="20dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_settings_24"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Switch Language"
                android:textSize="25sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="30sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:padding="10dp"
                android:textColor="@color/gray_600"
                />
<!--            language scrollview-->
            <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="110dp"
                            android:layout_height="160dp"
                            app:cardElevation="3dp"
                            app:strokeWidth="0dp"
                            app:strokeColor="@android:color/transparent"
                            android:backgroundTint="@color/white"
                          android:layout_margin="5dp"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="5dp">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/english"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="english"
                                    android:textSize="20sp"
                                    android:gravity="center"
                                    android:textColor="@color/black"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="110dp"
                            android:layout_height="160dp"
                            app:cardElevation="3dp"
                            app:strokeWidth="0dp"
                            app:strokeColor="@android:color/transparent"
                            android:backgroundTint="@color/white"
                            android:layout_margin="5dp"                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="5dp">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/france"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="frensh"
                                    android:textSize="20sp"
                                    android:gravity="center"
                                    android:textColor="@color/black"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="110dp"
                            android:layout_height="160dp"
                            app:cardElevation="3dp"
                            app:strokeWidth="0dp"
                            app:strokeColor="@android:color/transparent"
                            android:backgroundTint="@color/white"
                            android:layout_margin="5dp"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="5dp">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/spanish"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="spanish"
                                    android:textSize="20sp"
                                    android:gravity="center"
                                    android:textColor="@color/black"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="110dp"
                            android:layout_height="160dp"
                            app:cardElevation="3dp"
                            app:strokeWidth="0dp"
                            app:strokeColor="@android:color/transparent"
                            android:backgroundTint="@color/white"
                            android:layout_margin="5dp"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="5dp">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/arabe"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="arabe"
                                    android:textSize="20sp"
                                    android:gravity="center"
                                    android:textColor="@color/black"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </HorizontalScrollView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:textSize="25sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="30sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:padding="10dp"
                android:textColor="@color/gray_600"
                />
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="10dp"
                app:strokeWidth="0dp"
                app:strokeColor="@android:color/transparent"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/setting_btn_bg"
                        android:text="Reminders"
                        android:textSize="20sp"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        app:track="@drawable/custom_switch_track"
                        app:thumbTint="@color/gray_600"
                        app:trackTint="@color/switch_track_colors"
                        />
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/setting_btn_bg"
                        android:text="App Notifications"
                        android:textSize="20sp"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        app:track="@drawable/custom_switch_track"
                        app:thumbTint="@color/gray_600"
                        app:trackTint="@color/switch_track_colors"
                        />
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/setting_last_btn_bg"
                        android:text="Checks In"
                        android:textSize="20sp"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        app:track="@drawable/custom_switch_track"
                        app:thumbTint="@color/gray_600"
                        app:trackTint="@color/switch_track_colors"
                        />
                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>
<!--            account settings-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Settings"
                android:textSize="25sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="30sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:padding="10dp"
                android:textColor="@color/gray_600"
                />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center">
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/changePasswordBtn"
                        android:layout_width="0dp"
                        android:layout_height="85dp"
                        android:layout_weight="1"
                        app:cardElevation="5dp"
                        app:strokeWidth="0dp"
                        app:strokeColor="@android:color/transparent"
                        android:backgroundTint="@color/white"
                        android:layout_margin="5dp"
                        app:contentPadding="5dp"
                        android:layout_gravity="center"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:src="@drawable/mindfulness"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="Change Password"
                                android:textSize="20sp"
                                android:gravity="center"
                                android:textColor="@color/black"
                                />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/deleteAccountBtn"
                        android:layout_width="0dp"
                        android:layout_height="85dp"
                        android:layout_weight="1"
                        app:cardElevation="3dp"
                        app:strokeWidth="0dp"
                        app:strokeColor="@android:color/transparent"
                        android:backgroundTint="@color/white"
                        android:layout_margin="5dp"
                        app:contentPadding="5dp"
                        android:layout_gravity="center"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:src="@drawable/mindfulness"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="Delete account"
                                android:textSize="20sp"
                                android:gravity="center"
                                android:textColor="@color/black"

                                />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
<!--            data privacy-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Privacy"
                android:textSize="25sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="30sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:padding="10dp"
                android:textColor="@color/gray_600"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Share Data"
                    android:textSize="20sp"
                    android:paddingStart="22dp"
                    android:paddingEnd="15dp"
                    android:textColor="@color/black"
                    app:track="@drawable/custom_switch_track"
                    app:thumbTint="@color/gray_600"
                    app:trackTint="@color/switch_track_colors"
                    android:elevation="3dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:autoSizeMaxTextSize="20sp"
                    android:autoSizeMinTextSize="5sp"
                    android:autoSizeStepGranularity="1sp"
                    android:autoSizeTextType="uniform"
                    android:text="@string/data_authorisation"
                    android:textColor="@color/gray"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/exportDataBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/setting_btn_bg"
                        android:text="Export Data"
                        android:textColor="@color/black"
                        android:textAlignment="textStart"
                        android:textSize="20sp"
                        android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
                        />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/deleteDataBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Delete Data"
                        android:textColor="@color/black"
                        android:textAlignment="textStart"
                        android:textSize="20sp"
                        android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
                        android:backgroundTint="@null"
                        android:background="@drawable/setting_last_btn_bg"
                       />
            </LinearLayout>
<!--            help & support-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help &amp; Support"
                android:textSize="25sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="30sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:padding="10dp"
                android:textColor="@color/gray_600"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center">
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/contactUsBtn"
                    android:layout_width="0dp"
                    android:layout_height="85dp"
                    android:layout_weight="1"
                    app:cardElevation="5dp"
                    app:strokeWidth="0dp"
                    app:strokeColor="@android:color/transparent"
                    android:backgroundTint="@color/white"
                    android:layout_margin="5dp"
                    app:contentPadding="5dp"
                    android:layout_gravity="center"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:src="@drawable/help"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="Contact Us"
                            android:textSize="20sp"
                            android:gravity="center"

                            />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/faqBtn"
                    android:layout_width="0dp"
                    android:layout_height="85dp"
                    android:layout_weight="1"
                    app:cardElevation="3dp"
                    app:strokeWidth="0dp"
                    app:strokeColor="@android:color/transparent"
                    android:backgroundTint="@color/white"
                    android:layout_margin="5dp"
                    app:contentPadding="5dp"
                    android:layout_gravity="center"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:src="@drawable/faqs2"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="Faqs"
                            android:textSize="20sp"
                            android:gravity="center"
                            />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
<!--            terms & conditions-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms &amp; Conditions"
                android:textSize="25sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="30sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:padding="10dp"
                android:textColor="@color/gray_600"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_btn_bg"
                android:text="Terms &amp; Conditions"
                android:textColor="@color/black"
                android:textAlignment="textStart"
                android:textSize="20sp"
                android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
                />
<!--            log out-->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/logoutBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/light_blue_900"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                app:cardElevation="3dp"
                >
                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Log Out"
                    android:textSize="30sp"
                    android:drawableEnd="@drawable/log_out_exit"
                    android:backgroundTint="@null"
                    android:textColor="@color/white"
                    android:background="@android:color/transparent"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

</FrameLayout>