        <com.lottiefiles.dotlottie.core.widget.DotLottieAnimation
            android:id="@+id/dotLottieAnimationView"
            android:layout_width="200dp"
            android:layout_height="300dp"
            app:dotLottie_src="emailVerificationAnimation.lottie"
            app:dotLottie_useFrameInterpolation="true"
            app:dotLottie_playMode="normal"
            app:dotLottie_loop="true"
            app:dotLottie_autoplay="true"
            />
        <!-- Title -->
        <TextView
            android:id="@+id/emailConfirmationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_your_email_to_verify_your_email_and_continue"
            android:textSize="15sp"
            android:textStyle="normal"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginBottom="26dp"/>

        <Button
            android:id="@+id/resend_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/resend"
            android:textSize="20sp"
            android:textStyle="bold"
            android:backgroundTint="@color/white"
            android:textColor="@color/navy"/>
        <TextView
            android:id="@+id/timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="normal"
            android:gravity="center"
            android:textColor="@color/light_blue_400"
            android:layout_marginBottom="26dp"
            android:autoSizeMaxTextSize="25sp"
            android:autoSizeMinTextSize="15sp"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform"
            android:text="1:00"

            />


