<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EmailConfirmation"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="50dp"
            android:src="@drawable/orange_lock"
            android:layout_marginEnd="25dp"
            />
        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the Code Sent To Your Email"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginBottom="26dp"/>

        <!-- OTP Input Fields -->
        <LinearLayout
            android:id="@+id/otp_input_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="26dp">

            <!-- Digit 1 -->
            <EditText
                android:id="@+id/otp_digit_1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                android:background="@drawable/box_bg"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="18sp"
                android:importantForAccessibility="yes"/>

            <!-- Digit 2 -->
            <EditText
                android:id="@+id/otp_digit_2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                android:background="@drawable/box_bg"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="18sp"/>

            <!-- Digit 3 -->
            <EditText
                android:id="@+id/otp_digit_3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                android:background="@drawable/box_bg"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="18sp"/>

            <!-- Digit 4 -->
            <EditText
                android:id="@+id/otp_digit_4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                android:background="@drawable/box_bg"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="18sp"/>

        </LinearLayout>

        <!-- Button for Submission -->
        <Button
            android:id="@+id/btn_submit_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Verify"
            android:textSize="20dp"
            android:textStyle="bold"
            android:backgroundTint="@color/white"
            android:textColor="@color/navy"/>

    </LinearLayout>

</LinearLayout>